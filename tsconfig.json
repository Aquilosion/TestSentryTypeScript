{
	"compilerOptions": {
		"types": [
			"node"
		],
		"module": "commonjs",
		"target": "es2017",
		"lib": [
			"es2017"
		],
		"moduleResolution": "node",
		"rootDir": "./",
		"sourceMap": true,
		"allowJs": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"noImplicitReturns": true,
		"preserveConstEnums": true,
		"suppressImplicitAnyIndexErrors": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true
	},
	"exclude": [
		"node_modules",
		"build",
		"webpack"
	]
}
